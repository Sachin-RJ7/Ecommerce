<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecommerce Website</title>

    {{!-- css file --}}
    <link rel="stylesheet" href="/static/css/style.css">

    {{!-- fontawesom link --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

</head>

<body>

    <!-- Header Section -->

    {{> navbar data=navDetail}}
    
    
    <!-- Hero Section -->
    {{#each hero}}
    <section id="hero" style="background: url({{this.bgImage}}); background-size:cover; background-position: top 25% right 0;">
        <h4>{{this.subTitle}}</h4>
        <h2>{{this.titleOne}}</h2>
        <h1>{{this.titleTwo}}</h1>
        <p>Save more with coupons & up to 70% off!</p>
        <a href="{{this.link}}">Shop Now</a>
    </section>
    {{/each}}

    <!-- Feature Section -->
    <section id="feature" class="section-p1">

        {{#each features}}

            <div class="fe-box">
                <img src="{{this.iconUrl}}" alt="image">
                <h6>{{this.title}}</h6>
            </div>

        {{/each}}
    
    </section>



    <!-- Product1 Section -->
{{#each products}}
    <section id="product1" class="section-p1">
        <h2>{{this.title}}</h2>
        <p>{{this.subtitle}}</p>

        <div class="product-wrapper">


           {{#each details}}

                <div class="product-box">
                    <img src="{{this.clotheImage}}" alt="">
                    <div class="description">
                        <p>{{this.brandName}}</p>
                        <h6>{{this.description}}</h6>
                        <div class="star">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <h4>${{this.price}}</h4>
                    </div>
                    <a href="#"><i class="fa-solid fa-cart-shopping cart"></i></a>
                </div>

            {{/each}}

       
        </div>
    </section>

  {{/each}}




    <!-- Banner Section -->

    {{#each banner}}

        <section id="banner" class="section-m1" style="background: url({{this.bgImage}}); background-size:cover; background-position:center;">
            <h4>{{this.subTitle}}</h4>
            <h2>Up to <span>70% Off</span> - All t-Shirts & Accessories</h2>
            <a href="{{this.url}}"><button class="normal">Explore More</button></a>
        </section>

    {{/each}}




    <!-- Product2 Section -->

    {{#each newProducts}}

        <section id="product1" class="section-p1">
            <h2>{{this.title}}</h2>
            <p>{{this.subtitle}}</p>

            <div class="product-wrapper">

            {{#each details}}

                <div class="product-box">
                    <img src="{{this.clothImage}}" alt="">
                    <div class="description">
                        <p>{{this.brandName}}</p>
                        <h6>{{this.description}}</h6>
                        <div class="star">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <h4>${{this.price}}</h4>
                    </div>
                    <a href="#"><i class="fa-solid fa-cart-shopping cart"></i></a>
                </div>

            {{/each}}  

            </div>
        </section>

    {{/each}}




    <!-- Call To Action Banner  -->

    <section id="sm-banner" class="section-p1">

        {{#each callToAction}}

            <div class="banner-box" style="background:url({{this.bgImage}}); background-size: cover; background-position: center;">
                <h4>{{this.title}}</h4>
                <h2>{{this.subTitle}}</h2>
                <span>{{this.description}}</span>
                <a href="{{this.url}}"><button class="white">Learn More</button></a>
            </div>

        {{/each}}
       
    </section>




    <!-- Banner3 Section -->

    <section id="banner3">

        {{#each banner3}}

            <div class="banner-box" style="background:url({{this.bgImage}});
            background-size: cover; background-position: center;">
                <h2>{{this.title}}</h2>
                <h3>{{this.description}}</h3>
            </div>

        {{/each}}
        
    </section>


    

    <!-- Newsletter Section -->
    <section id="newsletter" class="section-p1 section-m1">
        <div class="left">
            <h4>Sign Up For Newsletter</h4>
            <p>Get E-mail updates about out latest shop and <span>special offers</span></p>
        </div>
        <div class="right">
            <input type="text" placeholder="Your email address">
            <button class="normal">Sign Up</button>
        </div>
    </section>


    <!-- Footer Section -->

    {{> footer}}


    <!-- javascript -->
    <script src="/static/js/script.js"></script>
</body>

</html>